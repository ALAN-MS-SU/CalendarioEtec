<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EtecCalendario.pages.ClassPage"
             Title="ClassPage">
    <VerticalStackLayout>
        <ListView ItemsSource="{Binding Dates}" BackgroundColor="Transparent" SelectedItem="Red">
            <ListView.ItemTemplate>
                <DataTemplate >
                    <ViewCell>
                        
                    <Label Text="{Binding Subject}" Style="{StaticResource PrimaryText}" VerticalOptions="Center"/>
                     </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
    
</ContentPage>