<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="EtecCalendario.MainPage"
             Shell.NavBarIsVisible="False"
             
             
             >
    
    <FlyoutPage.Behaviors>
        <toolkit:StatusBarBehavior x:Name="Barra" StatusBarColor="{StaticResource Primary}" />
    </FlyoutPage.Behaviors>
    <FlyoutPage.Flyout>
        <ContentPage Title="Menu">
            <VerticalStackLayout Padding="20,20,20,20" Spacing="50" HorizontalOptions="Start"  >
                <Label Text="Menu" Style="{StaticResource PrimaryText}"/> 
                <Button Text="Calendários" Style="{StaticResource Button}" WidthRequest="120" />
                <Button Text="Usuário" Style="{StaticResource Button}" WidthRequest="120" />
            </VerticalStackLayout>
        </ContentPage>
    </FlyoutPage.Flyout>
    <FlyoutPage.Detail>
        <ContentPage Title="Principal">
          
        </ContentPage>
    </FlyoutPage.Detail>

</FlyoutPage>
