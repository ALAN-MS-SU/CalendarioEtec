<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="EtecCalendario.MainPage"
             Shell.NavBarIsVisible="False"
             
             
             >

    <ContentPage.Behaviors>
        <toolkit:StatusBarBehavior x:Name="Barra" StatusBarColor="{StaticResource Primary}" />
    </ContentPage.Behaviors>
    <VerticalStackLayout Spacing="50" >
        <Label Text="Bem-Vindo"  HorizontalOptions="Center" Style="{StaticResource PrimaryTitle}"/>
        <Button Style="{StaticResource Button}" x:Name="ClassButton" Clicked="ClassButton_Clicked"
                Text="Turmas" WidthRequest="150" />
        <Button Style="{StaticResource Button}" Text="Calendarios" WidthRequest="150" />
        
    </VerticalStackLayout>
</ContentPage>
